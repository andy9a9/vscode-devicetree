{
    "name": "vscode-devicetree",
    "displayName": "VSCode DeviceTree",
    "version": "0.0.1",
    "description": "DeviceTree Language Support for Visual Studio Code",
    "publisher": "andy9a9",
    "keywords": [
        "devicetree",
        "dts",
        "dtsi",
        "dtso",
        "device tree",
        "embedded",
        "linux",
        "kernel",
        "syntax highlighting"
    ],
    "categories": [
        "Programming Languages",
        "Linters",
        "Formatters"
    ],
    "author": {
        "name": "Andrej Valek"
    },
    "contributors": [
        {
            "name": "Markus Kessler"
        }
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/andy9a9/vscode-devicetree"
    },
    "bugs": {
        "url": "https://github.com/andy9a9/vscode-devicetree/issues"
    },
    "homepage": "https://github.com/andy9a9/vscode-devicetree#readme",
    "main": "./dist/extension.js",
    "scripts": {
        "compile": "webpack",
        "compile-tests": "tsc -p . --outDir out",
        "lint": "eslint src",
        "package": "webpack --mode production --devtool hidden-source-map",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "test": "vscode-test",
        "vscode:prepublish": "npm run package",
        "watch": "webpack --watch",
        "watch-tests": "tsc -p . -w --outDir out"
    },
    "contributes": {
        "configurationDefaults": {
            "[dts]": {
                "editor.insertSpaces": false,
                "editor.tabSize": 8,
                "editor.detectIndentation": false
            }
        },
        "configuration": [
            {
                "title": "DeviceTree Language",
                "properties": {
                    "devicetree.maxLineLength": {
                        "type": "number",
                        "default": 80,
                        "description": "Maximum line length for DeviceTree files. Lines longer than this will be wrapped."
                    },
                    "devicetree.enableWarnings": {
                        "type": "boolean",
                        "default": true,
                        "description": "Enable warnings for DeviceTree files. If disabled, only errors will be reported."
                    }
                }
            }
        ],
        "grammars": [
            {
                "language": "dts",
                "scopeName": "source.dts",
                "path": "./syntaxes/dts.tmLanguage.json"
            }
        ],
        "languages": [
            {
                "id": "dts",
                "aliases": [
                    "DeviceTree",
                    "dts"
                ],
                "extensions": [
                    ".dts",
                    ".dtsi",
                    ".dtso"
                ],
                "configuration": "./syntaxes/devicetree-language.json"
            }
        ]
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.75.0",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@typescript-eslint/parser": "^8.31.1",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.25.1",
        "ts-loader": "^9.5.2",
        "typescript": "^5.8.3",
        "webpack": "^5.99.7",
        "webpack-cli": "^6.0.1"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "icon": "images/icon.png"
}
